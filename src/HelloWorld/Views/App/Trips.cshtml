@model IEnumerable<HelloWorld.Models.Trips>
@{
    ViewBag.Title = "Home page";
    //Layout = "_Layout"; //you really don't need to specify Layout on every page
    // if you want the page to automatically get a default layout then you could add
    // another item under Views folder (not in any sub folder) named _ViewStart.cshtml and define the layout there
}

<div class="row">
    <div class="col-md-6">
        <h1>Hello World!</h1>
        <p>This will be fun site soon</p>
        <form>
            <div class="form-group">
                <label>
                    Date
                </label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div>
                <button class="btn btn-success">Add</button>
            </div>
        </form>
        
    </div>
    <div class="col-md-6">
        <h2>The map here</h2>
        <ul>
            @foreach (var item in Model)
            {
                <li>@item.Name</li>
            }
        </ul>
    </div>
</div>